            <ListBoxItem x:Name="lbiMelk" Content="Melk" Selected="ListBoxItem_Selected"/>
            <ListBoxItem x:Name="lbiKaas" Content="Kaas" Selected="ListBoxItem_Selected"/>
            <ListBoxItem x:Name="lbiOlijven" Content="Olijven" Selected="ListBoxItem_Selected"/>
        </ListBox>
        <Label x:Name="lblSelected" Content="Label" HorizontalAlignment="Left" Margin="172,296,0,0" VerticalAlignment="Top" FontSize="14"/>

    </Grid>
</Window>
