        <Label x:Name="lblmail" Content="*" HorizontalAlignment="Left" Margin="434,81,0,0" VerticalAlignment="Top" FontSize="16" Foreground="#FFFF4600"/>
        <Label x:Name="lbldatum" Content="*" HorizontalAlignment="Left" Margin="434,117,0,0" VerticalAlignment="Top" FontSize="16" Foreground="#FFFF4600"/>
        <Label x:Name="lblprof" Content="*" HorizontalAlignment="Left" Margin="434,148,0,0" VerticalAlignment="Top" FontSize="16" Foreground="#FFFF4600"/>
