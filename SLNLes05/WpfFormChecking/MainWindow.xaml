        <DatePicker x:Name="dateDatum" HorizontalAlignment="Left" Margin="144,119,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.399,0.457" Width="245" FontSize="16"/>
        <Button x:Name="btnregistreren" Content="Registreren" HorizontalAlignment="Left" Margin="477,319,0,0" VerticalAlignment="Top" Width="278" Height="54" FontSize="16" Click="btnregistreren_Click"/>
