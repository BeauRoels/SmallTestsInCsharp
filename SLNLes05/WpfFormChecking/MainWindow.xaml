        <ComboBox x:Name="cbprofiel" HorizontalAlignment="Left" Margin="144,157,0,0" VerticalAlignment="Top" Width="245"/>
        <TextBox x:Name="txtmail" HorizontalAlignment="Left" Height="23" Margin="144,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245" FontSize="16"/>
