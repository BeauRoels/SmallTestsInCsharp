        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPizzatime"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FFFFC3C3">
    <Grid>
        <RadioButton x:Name="rbHot" Content="Hot &amp; spicy" HorizontalAlignment="Left" Margin="46,81,0,0" VerticalAlignment="Top" FontSize="20" Checked="rbHot_Checked"/>
        <RadioButton x:Name="rb4seasons" Content="4 seizoenen" HorizontalAlignment="Left" Margin="46,123,0,0" VerticalAlignment="Top" FontSize="20" Checked="rb4seasons_Checked"/>
        <RadioButton x:Name="rbhawaii" Content="Hawaii" HorizontalAlignment="Left" Margin="46,169,0,0" VerticalAlignment="Top" FontSize="20" Checked="rbhawaii_Checked"/>
        <Label x:Name="lblpizzatime" Content="Pizzatime" HorizontalAlignment="Left" Margin="46,10,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Label x:Name="lblpizzakeuze" Content="..." HorizontalAlignment="Left" Margin="352,80,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Image x:Name="imgpizza" HorizontalAlignment="Left" Height="139" Margin="444,169,0,0" VerticalAlignment="Top" Width="213"/>

    </Grid>
</Window>
