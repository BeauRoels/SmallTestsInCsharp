<Window x:Class="WpfChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfChat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FFC3FFFA">
    <Grid>
        <TextBox x:Name="txtnaam" HorizontalAlignment="Left" Height="23" Margin="96,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtbericht" HorizontalAlignment="Left" Height="199" Margin="96,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblnaam" Content="Naam" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblbericht" Content="Bericht" HorizontalAlignment="Left" Margin="10,156,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="txbchat" HorizontalAlignment="Left" Margin="345,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="292" Width="392" Foreground="Black"/>
        <Button x:Name="btnverzend" Content="Verzenden" HorizontalAlignment="Left" Margin="96,371,0,0" VerticalAlignment="Top" Width="120" Height="38" Click="btnverzend_Click"/>

    </Grid>
</Window>
